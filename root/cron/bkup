#!/bin/bash -eu

# Automatic backup script
#
# Link from:
# /etc/cron.weekly/

# ------------------------------------------------------------------------------
# Config (can be overriden by ENVVAR)
LOG_FILE=${LOG_FILE:-"/root/bkup.log"}
# ------------------------------------------------------------------------------

SCRIPT_DIR=$(dirname "$(realpath "$0")")
ROOT=${SCRIPT_DIR}/../backup

"${ROOT}/bkup_full.sh" >> "${LOG_FILE}" 2>&1
