#!/bin/sh

# Automatic backup script
#
# Link from:
# /etc/cron.weekly/

SCRIPT_DIR=$(realpath $(dirname $0))
ROOT=${SCRIPT_DIR}/../backup
BKUP_ROOT=/mnt/localbkup
LOG=/root/wpbkup.log
DB=wordpress

echo -------------------------------------------------------------------------------- >> ${LOG}
date -R >> ${LOG}
echo -------------------------------------------------------------------------------- >> ${LOG}

# web files
python3 ${ROOT}/bkup.py \
--tag wpbkup \
--mount-check ${BKUP_ROOT} \
--keep-count 30 \
--db wordpress \
/var/www/html/wp/ ${BKUP_ROOT}/wp \
>> ${LOG} 2>&1
