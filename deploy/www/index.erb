Content-Type: text/html; charset=utf-8

<%
require 'cgi'
load 'common.rb'

$dirs = nil

def init()
	cgi = CGI.new
	$dirs = Dir::glob(Const::PIC_DIRS).sort!.map do |dir|
		dir.match(Const::PIC_PATTERN)[1]
	end
end

init()
%>

<!DOCTYPE html>

<html>

<head>
<meta charset="utf-8"/>
<title>Date List</title>
</head>

<body>
<h1>Date List</h1>

% $dirs.each do |dir|
  <p><a href="pics.erb?date=<%= dir %>"><%= dir %></a></p>
% end

<footer>
  <p>
    <a href="http://validator.w3.org/check?uri=referer">
      <img src="W3C_HTML5_certified.png" alt="HTML5 validate" width="80"/>
    </a>
  </p>
</footer>
</body>

</html>
